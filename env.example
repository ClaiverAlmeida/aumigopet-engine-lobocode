# Configura√ß√µes de Produ√ß√£o - EXEMPLO
# Copie este arquivo para .env.production e preencha com valores reais
NODE_ENV=production

# Database
DB_NAME=infraseg_prod
DB_PASSWORD=SUA_SENHA_SUPER_SEGURA_AQUI
DB_HOST=db
DB_PORT=5432

# JWT
JWT_SECRET=SEU_JWT_SECRET_SUPER_SEGURO_AQUI
JWT_EXPIRES_IN=24h

# Redis
REDIS_URL=redis://redis:6379

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=500  # 500 requests por 15 minutos

# API URLs
API_URL=https://api.seudominio.com
# Frontend ser√° servido por outro projeto

# Grafana
GRAFANA_PASSWORD=SUA_SENHA_GRAFANA_AQUI

# Prometheus
PROMETHEUS_RETENTION_DAYS=30

# üìä M√©tricas e Auditoria (Opcional - true/false)
ENABLE_PROMETHEUS_METRICS=true
ENABLE_AUDIT_LOGS=true
PROMETHEUS_METRICS_PREFIX=infraseg_
METRICS_EXPORT_INTERVAL=15s

# Nginx
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Backup
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *  # 2h da manh√£ todos os dias 